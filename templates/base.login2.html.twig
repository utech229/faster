
{% set _locale = app.request.locale|default('fr') %}
{% set route   = app.request.attributes.get('_route') %}
<html lang="en">
	<!--begin::Head-->
	<head><base href="">
		<meta charset="UTF-8">
        <title>{% block title %}{{title}} {% endblock %}</title>
		<meta name="keywords" content="SMS, SMS Banking">
        <meta name="description" content="{{ brand.name }} {{"est une solution SMS professionnels, elle vous permet d'importer votre base de données de contacts et de gérer vos campagnes SMS. C'est un moyen d'envoi de messages personnalisés, groupés en quantité importante partout dans le monde. Elle dispose également d'une API facile à intégrer et flexible, très pratique pour les développeurs."| trans}}">
        <meta name="author" content="{{ brand.name }}">
		<meta property="og:locale" content="{{ _locale }}" />
		<meta property="og:type" content="article" />
		<meta property="og:title" content="{{title}}" />
		<meta property="og:url" content="{{ baseUrl }}" />
		<meta property="og:site_name" content="{{ brand.name }} |{{ brand.name }}" />
		<!-- Favicons -->
        <link href="{{ asset('app/uploads/brands/logos/'~ brand.logo ~'') }}" rel="icon">
        <link href="{{ brand.apple_touch_icon }}" rel="apple-touch-icon">
		<!--begin::Fonts-->
		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />
		<!--end::Fonts-->
		<!--begin::Global Stylesheets Bundle(used by all pages)-->
		<link href="{{ asset('app/plugins/global/plugins.bundle.css') }}" rel="stylesheet" type="text/css" />
		<link href="{{ asset('app/css/style.bundle.css') }}" rel="stylesheet" type="text/css" />
		<!--end::Global Stylesheets Bundle-->
        <link rel="stylesheet" href="{{ asset('librairies/intl/build/css/intlTelInput.css') }}">
        {% block stylesheets %}{% endblock %}
	</head>
	<!--end::Head-->
	<!--begin::Body-->
	<body id="kt_body" class="bg-body">
		<!--begin::Main-->
		<!--begin::Root-->
		<div class="d-flex flex-column flex-root">
			<!--begin::Authentication - Signup Free Trial-->
			<div class="d-flex flex-column flex-xl-row flex-column-fluid">
				<!--begin::Aside-->
				<div class="d-flex flex-column flex-center flex-lg-row-fluid" v>
					<!--begin::Content-->
					<div class="d-flex align-items-start flex-column p-5 p-lg-15">
						<!--begin::Logo-->
						<a href="{{ path('app_login')}}" class="mb-12">
							<img alt="{{ brand.name}}" style="-webkit-filter: saturate(100%);filter: saturate(100%);"  src="{{ asset('app/uploads/brands/logos/'~ brand.logo ~'') }}" class="h-50px" />
						</a>
						<!--end::Logo-->
						<!--begin::Title-->
						<h1 class="text-dark fs-2x mb-3">{% trans %}Bienvenue{% endtrans %}</h1>
						<!--end::Title-->
						<!--begin::Description-->
						<div class="fw-bold fs-4 text-gray-400 mb-10">
						{% if brand.name == "LITESMS" %}
						{{brand.name}}, <br>
						{% trans %}Plateforme de SMS marketing propulseur{% endtrans %}
						{% else %}
						{% trans %}Solution de campagne marketing par SMS{% endtrans %}
						{% endif %}
						</div>
						<!--begin::Description-->
						<!--begin::Illustration-->
						<img src="{{ asset('app/media/illustrations/sketchy-1/17-dark.png') }}" class="h-250px h-lg-350px" />
						<!--end::Illustration-->
					</div>
					<!--end::Content-->
				</div>
				<!--begin::Aside-->
				<!--begin::Content-->
				<div class="flex-row-fluid d-flex flex-center justfiy-content-xl-first p-10" style="background-color: #000">
					<!--begin::Wrapper-->
						{% block body %}{% endblock %}
					<!--end::Wrapper-->
				</div>
				<!--end::Right Content-->
				
			</div>
			<!--end::Authentication - Signup Free Trial-->
		</div>
		<!--end::Root-->
		<!--end::Main-->
		<!--begin::Javascript-->
        <!--begin::Global Javascript Bundle(used by all pages)-->
        <script src="{{ asset('app/plugins/global/plugins.bundle.js') }}"></script>
        <script src="{{ asset('app/js/scripts.bundle.js') }}"></script>
        <script src="{{ asset('librairies/intl/build/js/intlTelInput.min.js') }}"></script>
		<script src="{{ asset('app/js/queries/public-app/country-flag-input.js') }}"></script>
		 <script src="{{ asset('app/js/queries/general.js') }}"></script>
        <!--end::Global Javascript Bundle-->

		<!--begin::Page Custom Javascript(used by this page)-->
		<script>
			const register_url = "{{path('app_register')}}";
			const login_url    = "{{path('app_login', {'slug': 'registered'})}}";
		</script>
		<script src="{{ asset('app/js/queries/authentication/sign-up/general.js') }}"></script>
		<script src="{{ asset('app/js/queries/authentication/sign-in/general.js') }}"></script>
		<!--end::Page Custom Javascript-->

		<!--end::Javascript-->
        {% include 'translations/global.html.twig' %}
		{% include 'section/intl.input.html.twig' %}
        {% block javascripts %} {% endblock %}
		<!--end::Javascript-->
	</body>
	<!--end::Body-->
</html>