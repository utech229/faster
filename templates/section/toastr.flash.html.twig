<script type="text/javascript">
    time = 500;
    toastr.options = {
    "closeButton": false,
    "debug": true,
    "newestOnTop": false,
    "progressBar": true,
    "positionClass": "toastr-top-center",
    "preventDuplicates": false,
    "onclick": null,
    "showDuration": "3000",
    "hideDuration": "1000",
    "timeOut": "5000",
    "extendedTimeOut": "1000",
    "showEasing": "swing",
    "hideEasing": "linear",
    "showMethod": "fadeIn",
    "hideMethod": "fadeOut"
    };
    // Flexbox container for aligning the toasts -->
    {% for flash in app.flashes('error') %}
        time += 500;
        setTimeout(function(){
            toastr.error("{{flash}}");
        }, time);
    {% endfor %}

    {% for flash in app.flashes('warning') %}
        time += 500;
        setTimeout(function(){
            toastr.warning("{{flash}}");
        }, time);
    {% endfor %}

    {% for flash in app.flashes('success') %}
        time += 500;
        setTimeout(function(){
            toastr.success("{{flash}}");
        }, time);
    {% endfor %}

    {% for flash in app.flashes('info') %}
        time += 500;
        setTimeout(function(){
            toastr.info("{{flash}}");
        }, time);
    {% endfor %}
</script>
