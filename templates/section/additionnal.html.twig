<script type="text/javascript">
    function loading(status = false){
        const load = $("#loading-container");
        if(status) load.removeClass("sr-only"); else load.addClass("sr-only");
    }
    function viewTime(dtz){
        moment.locale(_locale);
        tz = moment.tz.guess(true);
        return dtz ? moment(dtz).tz(tz).format('llll') : "";
    }
    function btnAnimation(el, enable = false){
        if($(el).length > 0 && enable) {
            $(el).attr("data-kt-indicator", "on");
            el.disabled = true;
        }else if($(el).length > 0){
            $(el).attr("data-kt-indicator", "off");
            el.disabled = false;
        }
    }
    function swalSimple(icon, message, callback = null){
        Swal.fire({
            html: message,
            icon: icon,
            buttonsStyling: false,
            confirmButtonText: _confirm_success,
            customClass: {
                confirmButton: "btn fw-bold btn-secondary",
            }
        }).then((result) => {
            if (result.isConfirmed && callback) callback();
        });
    }
    function swalConfirm(icon, message, callback, cancelCallback = null){
        Swal.fire({
            html: message,
            icon: icon,
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: _confirm_success,
            cancelButtonText: _No,
        }).then((result) => {
            if (result.isConfirmed && callback) callback(); else if (cancelCallback) cancelCallback();
        });
    }

    const select2Format1 = function(item) {
        if ( !item.id ) {
            return item.text;
        }

        var span = document.createElement('span');
        var imgUrl = item.element.getAttribute('data-select2-avatar');
        var imgAlt = item.element.getAttribute('data-select2-alt');
        imgAlt = (imgAlt !== "null")?imgAlt:"image";
        var template = '';

        template += '<img src="' + imgUrl + '" class="h-20px me-2" alt="'+imgAlt+'"/>';
        template += item.text;

        span.innerHTML = template;

        return $(span);
    }

  
    var select2Format2 = function(item) {
        if ( !item.id ) {
            return item.text;
        }

        var span = document.createElement('span');
        var imgUrl = item.element.getAttribute('data-kt-select2-country');
        var template = '';

        template += '<img src="' + imgUrl + '" class="rounded-circle h-20px me-2" alt="image"/>';
        template += item.text;

