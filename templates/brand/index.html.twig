                                            </label>
                                            <!--end::Label-->
                                            <!--begin::Input-->
                                            <input type="text" id="nameB" class="form-control form-control-lg form-control-solid" name="_name_brand" placeholder="{{"Nom de la marque"|trans}}" value="" />
