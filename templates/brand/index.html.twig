                                                    <i class="bi bi-x fs-2"></i>
                                                </span>
                                                <!--end::Remove-->
                                            </div>
                                        </div>
                                        {% if users  != false %}
                                            <div class="fv-row mb-10">
                                                <label class="d-flex align-items-center fs-5 fw-bold mb-2">{% trans %}Compte{% endtrans %}</label>
                                                <select class="form-select form-select-solid fw-bolder" name='uSelect' id='_uSelect' data-kt-select2="true" data-dropdown-parent="#kt_modal_create_folder" data-placeholder="{{"Choisissez l'utilisateur"}}" data-allow-clear="true">
                                                    {% for user in users %}
                                                        <option value='{{user.uid }}'>{{ user.email }}</option>
                                                    {% endfor %}
                                                </select>
                                            </div>
                                        {% endif %}
                                    </div>
                                    <!--end::Content-->
                                </div>
                                <div class="flex-row-fluid pt-0 text-center" style="margin-top: 0px !important; margin-bottom:0px !important;">
                                        <button type="reset" class="btn btn-light me-3" data-kt-modal-action="cancel">{{'Annuler'| trans}}</button>
                                        <button type="submit" class="btn btn-primary" data-kt-modal-action="submit">
                                            <span class="indicator-label">{{'Enregistrer'| trans}}</span>
                                            <span class="indicator-progress">{{'Veuillez patienter'| trans}}...
                                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span></span>
                                        </button>
                                    </div>
                                <!--end::Stepper-->
                            </div>
                        </form>
                        <!--end::Modal body-->
                    </div>
                    <!--end::Modal content-->
                </div>
                <!--end::Modal dialog-->
            </div>
