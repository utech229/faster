    const url_get  = "{{ path('sender_all') }}";
    const url_new  = "{{ path('sender_new') }}";
    const url_edit = "{{ path('sender_edit', {'uid':'_1_'}) }}";
    const url_action = "{{ path('sender_action', {'uid':'_1_'}) }}";
    const url_show = "{{ path('sender_show', {'uid':'_1_'}) }}";
