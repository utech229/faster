{% extends 'base.app.html.twig' %}

{% block title %}{{ title }} {% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body %}
    <!--begin::Post-->
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <!--begin::Container-->
        <div id="kt_content_container" class="container-xxl"> 
            <!--begin::Row-->
            <div class="row g-5 g-xl-10">
                <!--begin::Col-->
                <div class="col-xl-4 mb-xl-10 shadow-md  rounded">
                    <!--begin::Lists Widget 19-->
                    <div class="card card-flush h-xl-100">
                        <!--begin::Heading-->
                        <div class="card-header rounded bgi-no-repeat bgi-size-cover bgi-position-y-top bgi-position-x-center align-items-start h-250px" style="background-image:url({{ asset('app/media/dashboard/top-green.png') }})">
                            <!--begin::Title-->
                            <h3 class="card-title align-items-start flex-column text-white pt-15">
                                <span class="fw-bolder fs-2x mb-3"> {% trans %}Salut{% endtrans %} , {{ app.user.usetting.firstName|upper}}</span>
                                <div class="fs-4 text-white">
                                    <span class="opacity-75">{% trans %}Bénéficiez de la{% endtrans %}</span>
                                    <span class="position-relative d-inline-block">
                                        <a href="javascript:;" style="color: #fc6" class="link-info opacity-75-hover fw-bolder d-block mb-1">{% trans %}puissance{% endtrans %}</a>
                                        <!--begin::Separator-->
                                        <span class="position-absolute opacity-50 bottom-0 start-0 border-2 border-white border-bottom w-100"></span>
                                        <!--end::Separator-->
                                    </span>
                                    <span class="opacity-75">{% trans %}des{% endtrans %} SMS</span>
                                </div>
                            </h3>
                            <!--end::Title-->
                        </div>
                        <!--end::Heading-->
                        <!--begin::Body-->
                        <div class="card-body mt-n20">
                            <!--begin::Stats-->
                            <div class="mt-n20 position-relative">
                                <!--begin::Row-->
                                <div class="row g-3 g-lg-6">
                                     <!--begin::Illustration-->
                                <div class="flex-grow-1 bgi-no-repeat bgi-size-contain bgi-position-x-center card-rounded-bottom h-200px mh-200px my-5 my-lg-12" style="background-image:url({{ asset('app/media/dashboard/sms.png') }}"></div>
                                <!--end::Illustration-->
                                </div>
                                <!--end::Row-->
                            </div>
                              <!--begin::Links-->
                            <div class="text-center mb-1">
                                <!--begin::Link-->
                                {% if brand.name == "FASTERMESSAGE" %}
                                    <a  href="{{ path('brand') }}" class="btn btn-sm btn-primary mt-2 me-2">{% trans %}Devenir revendeur{% endtrans %}</a>
                                {% else %}
                                    <a  href="{{ path('campaign_sms') }}" class="btn btn-sm mt-2 btn-primary me-2">{% trans %}Envoyer un SMS{% endtrans %}</a>
                                {% endif %}
                                <!--end::Link-->
                                <!--begin::Link-->
                                <a class="btn btn-sm btn-light mt-2" href="{{ path('app_developer') }}">{% trans %}API développeur{% endtrans %}</a>
                                <!--end::Link-->
                            </div>
                            <!--end::Links-->
                            <!--end::Stats-->
                        </div>
                        <!--end::Body-->
                    </div>
                    <!--end::Lists Widget 19-->
                </div>
                <!--end::Col-->
                
                <!--begin::Col-->
                <div class="col-xl-8 mb-5 mb-xl-10">

                    <div class="notification">
                     <!--begin::Alert-->
                        <div class="alert alert-dismissible bg-light-danger border border-danger border-dashed  h-lg-100 d-flex flex-column flex-sm-row w-100 p-5 mb-10">
                            <!--begin::Icon-->
                            <!--begin::Svg Icon | path: icons/duotune/communication/com003.svg-->
                            <span class="svg-icon svg-icon-2hx svg-icon-danger me-4 mb-5 mb-sm-0">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                    <path opacity="0.3" d="M2 4V16C2 16.6 2.4 17 3 17H13L16.6 20.6C17.1 21.1 18 20.8 18 20V17H21C21.6 17 22 16.6 22 16V4C22 3.4 21.6 3 21 3H3C2.4 3 2 3.4 2 4Z" fill="currentColor" />
                                    <path d="M18 9H6C5.4 9 5 8.6 5 8C5 7.4 5.4 7 6 7H18C18.6 7 19 7.4 19 8C19 8.6 18.6 9 18 9ZM16 12C16 11.4 15.6 11 15 11H6C5.4 11 5 11.4 5 12C5 12.6 5.4 13 6 13H15C15.6 13 16 12.6 16 12Z" fill="currentColor" />
                                </svg>
                            </span>
                            <!--end::Svg Icon-->
                            <!--end::Icon-->
                            <!--begin::Content-->
                            <div class="d-flex flex-column pe-0 pe-sm-10">
                                <h5 class="mb-1">{% trans %}Message{% endtrans %} </h5>
                                <span>{% trans %}Nous disposons de 72H pour la validation vos identifiants d'envoi après leur création.{% endtrans %}</span>
                            </div>
                            <!--end::Content-->
                        </div>
                        <!--end::Alert-->
                    </div>

                    <!--begin::Row-->
                    <div class="row g-5 g-xl-10">
                        <!--begin::Col-->
                        <div class="col-xl-12 mb-xl-10 card card-flush p-4">
                            <div id="kt_carousel_3_carousel" class="carousel carousel-custom slide" data-bs-ride="carousel" data-bs-interval="20000">
                                <!--begin::Heading-->
                                <div class="d-flex align-items-center justify-content-between flex-wrap">
                                    <!--begin::Label-->
                                    <span class="fs-2 fw-bolder p-4 pe-2">{% trans %}Services{% endtrans %}</span>
                                    <!--end::Label-->

                                    <!--begin::Carousel Indicators-->
                                    <ol class="p-0 m-0 carousel-indicators carousel-indicators-bullet carousel-indicators-active-primary">
                                        <li data-bs-target="#kt_carousel_3_carousel" data-bs-slide-to="0" class="ms-1 active"></li>
                                        <li data-bs-target="#kt_carousel_3_carousel" data-bs-slide-to="1" class="ms-1"></li>
                                        <li data-bs-target="#kt_carousel_3_carousel" data-bs-slide-to="2" class="ms-1"></li>
                                    </ol>
                                    <!--end::Carousel Indicators-->
                                </div>
                                <!--end::Heading-->
                                <!--begin::Carousel-->
                                <div class="carousel-inner f-3 p-4 pt-4">
                                    <!--begin::Item-->
                                    <div class="carousel-item  active">
                                        {% trans %}Envoyez vos SMS professionnels partout dans le monde avec un meilleur délai de livraison, très pratique pour les notifications SMS, le SMS-banking, le SMS marketing, les développeurs ...{% endtrans %}
                                    </div>
                                    <!--end::Item-->
                                    <!--begin::Item-->
                                    <div class="carousel-item">
                                        {% trans %}Restez en contact avec vos clients et faites vos campagnes SMS. Importez votre base de contacts et faites des envois de SMS entièrement personnalisable et paramétrable{% endtrans %}
                                    </div>
                                    <!--end::Item-->

                                    <!--begin::Item-->
                                    <div class="carousel-item">
                                        {% trans %}Accroitre votre visibilité auprès des prospects par le SMS marketing dans le but de les transformer en client puis de les fidéliser afin de créer un lien régulier{% endtrans %}
                                    </div>
                                    <!--end::Item-->
                                </div>
                                <!--end::Carousel-->
                            </div>
                            <!--begin::Action-->
                            <div class="mb-1 mt-4 p-4">
                                <a href="{{ path('campaign_sms')}}" class="btn btn-primary me-2">{% trans %}Envoyer un SMS{% endtrans %}</a>
                                <a href="{{ path('campaign_sms')}}" style="background: #fc6" class="btn me-2">{% trans %}Créer une Campagne{% endtrans %}</a>
                                <a href="{{ path('app_contact_index')}}" class="btn btn-success">{% trans %}Importer des contacts{% endtrans %}</a>
                            </div>
                            <!--end::Action-->
                        </div>
                        <!--end::Col-->
                    </div>
                    <!--end::Row--> 

                    <!--begin::Engage widget 4-->
                    <div class="card" style="background: {% if brand.name == "FASTERMESSAGE" %}  #003366  {% else %} #010246 {% endif %};">
                        <!--begin::Body-->
                        <div class="card-body d-flex ps-xl-15">
                            <!--begin::Action-->
                            <div class="m-0">
                                <!--begin::Title-->
                                <div class="position-relative fs-2x z-index-2 fw-bolder text-white mb-7">
                                <span class="me-2"> {% trans %}Vous avez besoin de {% endtrans %}
                                <span class="position-relative d-inline-block text-warning">
                                    <a href="{{ path('app_recharge')}}" style="color: #fc6" class="opacity-75-hover">{% trans %}crédit SMS {% endtrans %} !</a>
                                    <!--begin::Separator-->
                                    <span class="position-absolute opacity-50 bottom-0  start-0 border-4 border-bottom w-100" style="color: #fc9"></span>
                                    <!--end::Separator-->
                                </span></span> <br> {% trans %}Rechargez votre compte en quelques secondes{% endtrans %}</div>
                                <!--end::Title-->
                                <!--begin::Action-->
                                <div class="mb-3">
                                    <a href='{{ path('app_recharge')}}' class="btn fw-bold me-2" style="background: #fc6">
                                    {% trans %}Recharger mon compte{% endtrans %}</a>
                                    <a href="{{ path('sender')}}" style="background: #fff" class="btn fw-bold">{% trans %}Créer un identifiant{% endtrans %}</a>
                                </div>
                                <!--begin::Action-->
                            </div>
                            <!--begin::Action-->
                            <!--begin::Illustration-->
                            <img src="{{ asset('app/media/dashboard/bell.png') }}" class="position-absolute  me-3 bottom-0 end-0 mb-4 mr-4 w-100px h-100px" alt="" />
                            <!--end::Illustration-->
                        </div>
                        <!--end::Body-->
                    </div>
                    <!--end::Engage widget 4-->
                </div>
                <!--end::Col-->
            </div>
            <!--end::Row-->
            <!--begin::Row-->
        </div>
        <!--end::Container-->
    </div>
    <!--end::Post-->
{% endblock %}



