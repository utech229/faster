{% extends 'base.email.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<!--begin:Email content-->
<div style="padding-bottom: 30px; font-size: 17px;">
	<strong>{% trans %}Bienvenu sur {% endtrans %} {{ brand.name }}</strong>
</div>
<div style="padding-bottom: 30px">{% trans %}Pour activer votre compte, veuillez 
	cliquer sur le bouton ci-dessous pour vérifier votre adresse e-mail. 
	Une fois activé, vous aurez un accès complet à nos offres de services.{% endtrans %}
</div>
<div style="padding-bottom: 40px; text-align:center;">
	<a href="{{data.url}}" rel="noopener" style="text-decoration:none;display:inline-block;text-align:center;padding:0.75575rem 1.3rem;font-size:0.925rem;line-height:1.5;border-radius:0.35rem;color:#ffffff;background-color:#009EF7;border:0px;margin-right:0.75rem!important;font-weight:600!important;outline:none!important;vertical-align:middle" target="_blank">{% trans %}Activer le compte{% endtrans %}</a>
</div>
<div style="padding-bottom: 30px">{% trans %}Ce lien de vérification va expirer dans 30 jours{% endtrans %}</div>
<div style="border-bottom: 1px solid #eeeeee; margin: 15px 0"></div>
<div style="padding-bottom: 50px; word-wrap: break-all;">
	<p style="margin-bottom: 10px;"> {% trans %}Le bouton ne fonctionne pas ? Cliquez sur le lien ou essayez de coller cette URL dans votre navigateur{% endtrans %} :</p>
	<a href="{{data.url}}" rel="noopener" target="_blank" style="text-decoration:none;color: #009EF7">{{data.url}}</a>
</div>
<!--end:Email content-->
{% endblock %}


{% block javascripts %} {% endblock %}